@model int
@inject ApplicationDbContext dbContext

@{
    var cityList = dbContext.TypesHousing.ToList();
}
<div class="field">
    <label>
        <label>@Html.LabelFor(x => x)
            @if (ViewData.ModelMetadata.IsRequired)
            {
                <text><span style="color: Red; font-weight: bold;">*</span></text>
            }
        </label>
    </label>
    <select asp-for="@Model" asp-items="@(new SelectList(cityList, "Id", "Name", Model))" disabled='@ViewData["disabled"]' class="ui fluid dropdown ">
        <option value="">Тип жилья</option>
    </select>
</div>
