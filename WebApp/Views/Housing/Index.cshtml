@model IEnumerable<WebApp.ViewModels.HousingEditModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
{
    <div class="ui three column stackable grid segment">
        <div class="four wide column">
            <div class="ui">
                <h3><i class="home icon"></i>@item.HouseType
                </h3>
            </div>
        </div>
        <div class="four wide column">
            <div class="ui ">
                <h3><i class="ruble icon"></i>@item.Cost
                </h3>
            </div>
        </div>
        <div class="eight wide column">
            <div class="ui right aligned">
                <i class="marker icon"></i> @item.FullAddress
            </div>
        </div>
        <div class="ten wide column">
            <div class="ui"><i class="write icon"></i> <span>@item.Comment</span></div>
        </div>
        <div class="six wide column">
            <div class="ui"><i class="phone icon"></i>
                    <span>@item.Phone1</span> <span>@item.Phone2</span> <span>@item.Phone3</span>
            </div>
        </div>
    </div>
}

<div class="ui circular labels">
    <a class="ui label">Первая</a>
    <a class="ui blue label">1</a>
    <a class="ui label">2</a>
    <a class="ui label">3</a>
    <a class="ui label">Последняя</a>
</div>
