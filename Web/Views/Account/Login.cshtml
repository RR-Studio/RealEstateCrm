@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Войти на сайт как сотрудник";
}

<h2>@ViewData["Title"]</h2>

        <section>            
            
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="ui large form" role="form">
                    <h4>Используйте Вашу учетную запись для входа</h4>
                    <hr />
                    <div >
                        <div asp-validation-summary="All" ></div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input asp-for="Email" placeholder="E-mail адрес" type="text"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>                                
                                <input asp-for="Password" placeholder="Пароль" />
                                <span asp-validation-for="Password" class="text-danger"></span>                                
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui toggle checkbox">                          
                                <input asp-for="RememberMe" type="checkbox"/>
                                <label>Запомнить меня</label>
                            </div>
                        </div>
                        <button class="ui fluid large teal submit button" type="submit">Войти</button>                                                        
                    </div>
                </form>
           
        </section>
    
